import random

characters = "qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890!@#$%^&*()`-=[]\;',./~_+:<>?"
var = 1

while var == 1:
    passwordlength = int(input("How long do you want your password to be?"))
    passwordcount = int(input("How many passwords do you want?"))
    for i in range(0,passwordcount):
        password = ""

        for i in range(0,passwordlength):
          passwordcharacter = random.choice(characters)
          password = password + passwordcharacter
        print("Here is your password", password)  

print("Thank you for using our program, hope you have a nice day ahead")
